---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import FormattedDate from '../components/FormattedDate.astro';

import '../styles/globals.scss';

type BlogData = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } =
	Astro.props as BlogData;

const heroAlt = '';
const baseUrl = `${import.meta.env.BASE_URL.replace(/\/$/, "")}/`;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: 100%;
				max-width: 100%;
				margin: 0 auto;
			}

			/* Back Icon Button */
			.back-icon {
				position: fixed;
				top: 2rem;
				left: 2rem;
				width: 42px;
				height: 42px;
				display: flex;
				align-items: center;
				justify-content: center;
				border-radius: 50%;
				background: rgba(255, 255, 255, 0.92);
				border: 1px solid var(--color-border);
				backdrop-filter: blur(6px);
				text-decoration: none;
				transition: all 0.2s ease;
				z-index: 100;
			}

			.back-icon:hover {
				background: var(--color-accent-soft);
				transform: translateX(-3px);
			}

			.back-icon svg {
				width: 20px;
				height: 20px;
				stroke: var(--color-text);
				transition: stroke 0.2s ease;
			}

			.back-icon:hover svg {
				stroke: var(--color-accent);
			}

			.hero-image {
				width: 100%;
				max-width: 1020px;
				margin: 3rem auto 0;
				padding: 0 1em;
			}

			.hero-image img {
				width: 100%;
				height: auto;
				display: block;
				border-radius: 12px;
				box-shadow: var(--shadow-soft);
			}

			.prose {
				width: 760px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1.1em 1.15em 2.5em;
				color: var(--color-text);
			}

			.title {
				margin: 0 0 1.2em 0;
				padding: 0.25em 0 1em;
				text-align: center;
				line-height: 1.2;
				border-bottom: 1px solid var(--color-border);
			}

			.title h1 {
				margin: 0 0 0.35em 0;
				font-size: clamp(1.7rem, 2.2vw, 2.35rem);
			}

			.date {
				margin-bottom: 0.5em;
				color: var(--color-muted);
				font-size: 0.96rem;
			}

			.last-updated-on {
				font-style: italic;
			}

			:global(.prose p) {
				max-width: 72ch;
				margin: 0.75rem 0;
			}

			:global(.prose ul),
			:global(.prose ol) {
				margin: 0.55rem 0 1rem;
				padding-left: 1.2rem;
			}

			:global(.prose li) {
				margin: 0.35rem 0;
			}

			:global(.prose h2) {
				display: inline-flex;
				align-items: center;
				gap: 0.55rem;
				margin-top: 2.8rem;
			}

			:global(.prose h2::before) {
				content: "";
				width: 0.42rem;
				height: 1.15rem;
				border-radius: 999px;
				background: var(--color-accent);
			}

			:global(.prose h2 + p) {
				margin-top: 0.45rem;
			}

			:global(.prose h3) {
				margin-top: 1.8rem;
				padding: 0.45rem 0 0.35rem;
				border-bottom: 1px dashed var(--color-border);
			}

			:global(.prose hr) {
				border: 0;
				border-top: 1px solid var(--color-border);
				margin: 2rem 0 1.2rem;
			}

			:global(.prose video) {
				margin: 0.85rem 0 1.25rem;
				border: 1px solid var(--color-border);
				box-shadow: var(--shadow-soft);
			}

			:global(.prose .insight-grid) {
				display: grid;
				grid-template-columns: repeat(2, minmax(0, 1fr));
				gap: 0.85rem;
				margin: 0.8rem 0 1.15rem;
			}

			:global(.prose .insight-card) {
				background: var(--color-accent-soft);
				border: 1px solid var(--color-border);
				border-radius: 12px;
				padding: 0.9rem 1rem 0.95rem;
			}

			:global(.prose .insight-card__title) {
				display: flex;
				align-items: center;
				gap: 0.55rem;
				margin: 0 0 0.45rem;
				font-weight: 650;
			}

			:global(.prose .insight-card__icon) {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				width: 1.35rem;
				height: 1.35rem;
				border-radius: 999px;
				border: 1.5px solid var(--color-accent);
				color: var(--color-accent);
				font-size: 0.82rem;
				font-weight: 700;
				line-height: 1;
			}

			:global(.prose .insight-card ul) {
				margin: 0.3rem 0 0;
				padding-left: 1.15rem;
			}

			@media (max-width: 720px) {
				.prose {
					padding: 0.75em 0.25em 2.2em;
				}

				.title {
					padding: 0.2em 0 0.85em;
				}

				.back-icon {
					top: 1rem;
					left: 1rem;
				}

				:global(.prose .insight-grid) {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>

	<body>
		<main>
			<article>

				<!-- Back Icon -->
			<a href={baseUrl} class="back-icon" aria-label="Back to overview">
					<svg viewBox="0 0 24 24" fill="none" stroke-width="2">
						<path d="M15 18l-6-6 6-6" stroke-linecap="round" stroke-linejoin="round"/>
					</svg>
				</a>

				{heroImage ? (
					<div class="hero-image">
						<img src={heroImage} alt={heroAlt} loading="lazy" decoding="async" />
					</div>
				) : null}

				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{updatedDate ? (
								<div class="last-updated-on">
									Last updated on <FormattedDate date={updatedDate} />
								</div>
							) : null}
						</div>

						<h1>{title}</h1>
					</div>

					<slot />
				</div>
			</article>
		</main>
	</body>
</html>
